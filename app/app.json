{
  "expo": {
    "name": "AirSense",
    "slug": "airsense-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#2196F3"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSBluetoothAlwaysUsageDescription": "This app needs Bluetooth to connect to your AirSense device and monitor air quality in real-time.",
        "NSBluetoothPeripheralUsageDescription": "This app needs Bluetooth to connect to your AirSense device and monitor air quality in real-time.",
        "NSLocationWhenInUseUsageDescription": "Location access is required for Bluetooth device scanning on iOS.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "bundleIdentifier": "com.havamal65.airsenseapp"
    },
    "android": {
      "permissions": [
        "BLUETOOTH",
        "BLUETOOTH_ADMIN",
        "BLUETOOTH_CONNECT",
        "BLUETOOTH_SCAN",
        "ACCESS_FINE_LOCATION",
        "BLUETOOTH",
        "BLUETOOTH_ADMIN",
        "BLUETOOTH_CONNECT",
        "BLUETOOTH_SCAN",
        "ACCESS_FINE_LOCATION"
      ],
      "package": "com.havamal65.airsenseapp"
    },
    "web": {
      "bundler": "metro"
    },
    "extra": {
      "eas": {
        "projectId": "bfe550dc-d808-48bf-83f1-819be5ad21c4"
      }
    }
  }
}
